{
  "manifest_version": 2,

  "name": "Softomate test",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "browser_action": {
    "default_title": "Softomate test",
    "default_icon": "icon.png",
    "default_popup": "index.html"
  }
}
